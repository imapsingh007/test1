# Use Node.js as base image
FROM node:18

# Set working directory in the container
WORKDIR /usr/src/app

# Copy package.json and package-lock.json from the images/ directory
COPY images/package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application files
COPY images/ ./

# Expose the app's port (if needed)
EXPOSE 3000

# Start the app (modify based on your entry point)
CMD ["npm", "start"]
